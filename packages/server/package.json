    "@types/formidable": "^3.4.5",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/node": "^20.12.9",
    "@types/nodemailer": "^6.4.15",
    "@types/react-dom": "^19.0.4",
    "@types/yup": "^0.32.0",
    "kill-port": "^2.0.1",
